<body>
	<div class="container">
		<div class="row">
			<div class="col-md-6 col-md-offset-3">
		<%= form_for (@book) do |f| %>

		<!-- エラー時メッセージ表示 -->
			<% if @book.errors.any? %>
				<h3><%= @book.errors.count %> errors prohibited this obj from being saved:</h3>
				<ul>
					<% @book.errors.full_messages.each do |message| %>
					<li><%= message %></li>
					<% end %>
				</ul>
			<% end %>

			<h2>Editing Book</h2>
			<h4>Title</h4>
				<%= f.text_field :title, class: "book_title col-xs-12" %>
			<h4>Opinion</h4>
				<%= f.text_area :body, class: "book_body col-xs-12" %>
			<div>
				<%= f.submit 'Update Book', class: "btn btn-primary col-xs-12" %>
			</div>
		<% end %>

		<div class="btn btn-sm">
		<%= link_to "Show", book_path, class: "book_#{@book.id}" %>
		</div>

		<div class="btn btn-sm">
		<%= link_to "Back", books_path, class: "back" %>
		</div>
	</div>
	</div>
	</div>
</body>